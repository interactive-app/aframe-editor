{
  "name": "aframe-editor",
  "version": "0.0.1",
  "description": "Easy to use scene editor for a-frame",
  "license": "MIT",
  "main": "build/aframe-editor.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aframevr/aframe-editor.git"
  },
  "homepage": "https://github.com/aframevr/aframe-editor",
  "bugs": {
    "url": "https://github.com/aframevr/aframe-editor/issues"
  },
  "keywords": [
    "vr",
    "aframe",
    "editor",
    "webvr"
  ],
  "devDependencies": {
    "browserify": "^12.0.1",
    "browserify-css": "^0.8.1",
    "budo": "^6.0.4",
    "semistandard": "^7.0.3",
    "snazzy": "^2.0.1"
  },
  "dependencies": {
    "aframe-core": "^0.1.3",
    "signals": "^1.0.0",
    "sortablejs": "^1.4.2"
  },
  "scripts": {
    "start": "npm run dev",
    "dev": "npm run build && node ./scripts/budo",
    "build": "mkdir -p build/ && npm run browserify -- --debug -o build/aframe-editor.js",
    "dist": "mkdir -p dist/ && npm run browserify -- --debug -o dist/aframe-editor.js",
    "browserify": "browserify src/index.js -s 'aframe-editor'",
    "lint": "semistandard -v $(git ls-files '*.js') | snazzy",
    "precommit": "npm run lint"
  },
  "browserify": {
    "transform": [
      "browserify-css"
    ]
  },
  "browserify-css": {
    "minify": true
  },
  "semistandard": {
    "ignore": [
      "build/**",
      "dist/**",
      "lib/vendor/**"
    ]
  }
}
